<div class="comments_list_inner_section">
  <div class="user_comment">
    <ul>
    <% @comments.order('id ASC').reorder('created_at DESC').each do |comment| %>
      <li>
        <div class="medium-1 columns image_name_container">
          <div class="image_cover">
            <div><%= link_to (image_tag("img-profile-image-default.png")), user_path(comment.user) %></div>
          </div>
        </div>

        <div class="medium-11 columns comment_content_container">
          <div class="name_comment">
            <span class="name"><%= link_to comment.user.firstname, user_path(comment.user) %></span>
            <span class="comment"><%= comment.content %></span>
          </div>
          <span class="minor_links">Posted: <%= time_ago_in_words(comment.created_at) %> ago</span>
          <div class="minor_links hide"><%= link_to "delete comment", discussion_comment_path(comment), method: :delete %></div>
        </div>
        <div class="clear"></div>
      </li><br/>
    <% end %>
    </ul>
  </div>
</div>