<div class="reveal modal_general_design_all" id="modal_user_joined_groups" data-reveal>
  <div class="modal_header"><%= "#{@user.firstname}'s" %> groups [<%= @user.attending_groups.count %>]</div>
  <div class="modal_content">

    <% if @user.jobs.present? %>
      <!-- listed contents -->
      <div class="subcontent">Listed current jobs posted you</div>
      <div>
        <ul>
          <% @user.jobs.each do |job| %>
            <li>
              <div>
                <span><%= link_to "#{job.title}", job_path(job) %></span>
                <span>|</span>
                <span>posted:</span>
                <span><%= job.created_at.strftime("%b %d, %Y") %></span>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <!-- listed contents -->
    <% else %>
      <!-- no_listed_info -->
        <div><%= render "shared/no_listed_content" %></div>
      <!-- no_listed_info -->
    <% end %>

  </div>
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>