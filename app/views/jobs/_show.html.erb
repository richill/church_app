<div class="pages_boarder"></div>
<div class="medium-12 columns jobshow_section">
  <div class="jobshow_inner_section">
    <div class="medium-12 columns jobshow_content">
      <div class="tree_line">
        <span><%= link_to "home", root_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span><%= link_to "resources", resources_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span><%= link_to "careers & volunteers", careers_and_volunteers_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span class="current_page"><%= @job.title %></span>
      </div>

      <div class="medium-12 columns page_main_content">
        <!-- info_left_content -->
        <div class="medium-8 columns info_left_content">
          <div class="page_information">
            <!-- top_section -->
            <div class="user_top_section">
              <div class="content_cover">
                <div class="user_name"><%= "#{@job.title}" %></div>
                <div class="member_date">(posted: <%= @job.created_at.strftime("%b %d, %Y") %>)</div>
              </div>
            </div>
            <!-- top_section -->

            <!-- bottom_section -->
            <div class="medium-12 columns job_deatils">
              <div class="content_cover">
                <div class="info_content">
                  <strong>Location:</strong>
                  <%= @job.location %>
                </div>

                <div class="info_content">
                  <strong>Description:</strong>
                  <%= @job.description %>
                </div>
          
                <div class="listed_btns">
                  <span class="category"><%= link_to "#{@job.category_job.name}", job_path(@job) %></span>
                  <span class="category joblevel"><%= link_to "#{@job.category_joblevel.name}", job_path(@job) %></span>
                </div>
         
              </div>
            </div>
            <!-- bottom_section -->
          </div>


        </div>
        <!-- info_left_content -->

        <!-- info_right_content -->
        <%= render 'shared/content_jobs_options' %>
        <%= render 'shared/content_service_times' %>
        <!-- info_right_content -->
      </div>

    </div>
  </div>
</div>



