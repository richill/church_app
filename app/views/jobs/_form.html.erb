<%= simple_form_for [@user, @job] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :location, placeholder: "UK/London", label: "Country/City" %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.association :category_job, collection: CategoryJob.all, prompt: "select a category", label: "Job Category" %>
    <%= f.association :category_joblevel, collection: CategoryJoblevel.all, prompt: "select a job level", label: "Job Category" %>
    <%= f.association :category_jobtype, collection: CategoryJobtype.all, prompt: "select a job type", label: "Job Category" %>
    
    <% if current_user.admin? %>
      <%= f.input :close %>
      <%= f.input :approve %>
      <%= f.input :churchjob, label: "Tick if this is a church job" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
