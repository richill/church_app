<div class="pages_boarder"></div>
<div class="medium-12 columns galleryindex_section">
  <div class="galleryindex_inner_section">
    <div class="medium-12 columns galleryindex_content">
      <div class="tree_line">
        <span><%= link_to "home", root_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span><%= link_to "connect", root_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span class="current_page">galleries</span>
      </div>

      <div class="medium-12 columns page_main_content">
        <!-- info_left_content -->
        <div class="medium-8 columns info_left_content">
          <div class="page_information">
            <div class="page_header">galleries</div>
            <div class="gallery_section">
              <!-- listed galleries -->
              <div class="gallery_content">
                <div class="gallery_inner_content">
                  <ul>
                    <% @galleries.each do |gallery| %>
                      <li>
                        <div>
                          <span class="gallery_img_section">
                            <div class="gallery_img_outter">
                              <div class="gallery_img"><%= link_to (image_tag("img_sample.jpg")), "#" %></div>
                            </div>
                          </span>
                          <span class="gallery_info_section">
                            <%= link_to gallery_path(gallery), target:"_blank" do %>
                              <div class="gallery_title"><%= truncate("#{gallery.name}", length: 45) %></div>
                              <div class="gallery_minor_info gallery_time">
                                <span><b>date:</b></span>
                                <span><%= gallery.date.strftime("%b %d %Y") %></span>  
                                <span class="listgallery_divider">|</span>
                                <span><b>time:</b></span>
                                <span>9:00AM - 06:00PM<%# "#{event.start_time.strftime("%I:%M%p")}" %> - <%# "#{event.end_time.strftime("%I:%M%p")}" %></span>
                              </div>
                              <div class="gallery_minor_info gallery_description"><%= truncate("#{gallery.description}", length: 250) %></div>
                            <% end %>
                          </span>
                        </div>
                      </li>
                      <div class="clear"></div>
                    <% end %>
                  </ul>
                </div>
              </div>
              <!-- listed galleries -->
            </div>
          </div>
        </div>
        <!-- info_left_content -->

        <!-- info_right_content -->
        <%= render 'shared/content_service_times' %>
        <!-- info_right_content -->
      </div>

    </div>
  </div>
</div>





<div class="old_content">
  <p id="notice"><%= notice %></p>
  <h1>Galleries</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Description</th>
        <th>Image</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @galleries.each do |gallery| %>
        <tr>
          <td><%= gallery.name %></td>
          <td><%= gallery.date %></td>
          <td><%= gallery.description %></td>
          <td><%= gallery.image %></td>
          <td><%= gallery.user_id %></td>
          <td><%= link_to 'Show', gallery %></td>
          <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
          <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Gallery', new_gallery_path %>
</div>
