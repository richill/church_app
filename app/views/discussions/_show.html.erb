<div class="pages_boarder"></div>
<div class="medium-12 columns galleryshow_section">
  <div class="galleryshow_inner_section">
    <div class="medium-12 columns galleryshow_content">
      <div class="tree_line">
        <span><%= link_to "home", root_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span><%= link_to "connect", connect_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span><%= link_to "forum", forum_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span class="current_page"><%= @discussion.topic %></span>
      </div>

      <div class="medium-12 columns page_main_content">
        <!-- info_left_content -->
        <div class="medium-8 columns info_left_content">
          <div class="page_information">
            <div class="page_header"><%= @discussion.topic %></div>
            <div class="date_category">
              <span>
                <span class="evt_subheader">created date:</span>
                <span><%= @discussion.created_at.strftime("%b %d %Y") %></span>
                <span class="listgallery_divider">|</span>
                <span><b>Time:</b></span>
                <span><%= @discussion.created_at.strftime("%I:%M%p") %></span>
                <span class="listgallery_divider">|</span>
                <span><i class="fa fa-comments"></i> <span>11 comments</span></span>
              </span>
            </div>
            <div class="paragraph_content">
              <span><%= truncate("#{@discussion.description}", length: 300) %></span>
              <span><%= link_to "view", "#", class: "weblink" %></span>
            </div>
            <div class="gallery_photos_section">
              <!-- listed gallery photos -->
              <div class="gallery_photos_content">
                comment section
              </div>
              <!-- listed gallery photos -->
            </div>
          </div>
        </div>
        <!-- info_left_content -->

        <!-- info_right_content -->
        <%= render 'shared/content_service_times' %>
        <!-- info_right_content -->
      </div>

    </div>
  </div>
</div>


<div class="old_content">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Topic:</strong>
    <%= @discussion.topic %>
  </p>

  <p>
    <strong>Topic:</strong>
    <%= @discussion.image %>
  </p>

  <%= link_to 'Edit', edit_discussion_path(@discussion) %> |
  <%= link_to 'Back', discussions_path %>
</div>