<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.association :category_event, collection: CategoryEvent.all, prompt: "select a category", label: "Event Category" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
