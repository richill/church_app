  <div class="content_ministryideapg_inner_section">
    <div class="medium-12 columns ministryideapg_content">
      <div class="tree_line">
        <span><%= link_to "home", root_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span class="current_page">new minsitry launch</span>
      </div>

      <div class="medium-12 columns page_main_content">
