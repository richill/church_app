<div class="pages_boarder"></div>
<div class="medium-12 columns discussionshow_section">
  <div class="discussionshow_inner_section">
    <div class="medium-12 columns discussionshow_content">
      <div class="tree_line">
        <span><%= link_to "home", root_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span><%= link_to "grow", grow_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span class="current_page"><%= link_to "small groups", small_groups_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span class="current_page"><%= @smallgroup.name %></span>
      </div>

      <div class="page_main_content">
        <!-- info_left_content -->
        <div class="info_left_content">
          <div class="medium-8 columns page_information">
            <div class="page_header"><%= @smallgroup.name %></div>
            <div class="date_category">
              <span>
                <span class="page_subheader"><b>Created date:</b></span>
                <span><%= @smallgroup.created_at.strftime("%b %d %Y") %></span>
                <span class="listpage_divider">|</span>
                <span><b>Created Time:</b></span>
                <span><%= @smallgroup.created_at.strftime("%I:%M%p") %></span>
                <span class="listpage_divider">|</span>
                <span><i class="fa fa-users"></i> <span>5 members</span></span>
              </span>
            </div>
            <div class="paragraph_content">
              <span><%= truncate("#{@smallgroup.descriptin}", length: 300) %></span>
              <span><%= link_to "view", "#", class: "weblink" %></span>
              <div class="action_btn hide">
                <span><%= link_to "edit group name", edit_discussion_path(@smallgroup) %></span>
                <span><%= link_to "delete group name", "#" %></span>
              </div>
            </div>
            <div class="discussions_section">
              <!-- listed members -->
              <div class="discussions_content">
                <div>
                  <div class="comment_header"><i class="fa fa-users"></i> <span>members</span></div>
                  <%# render "shared/content_comment_form" %>
                  <%# render "shared/content_comments" %>
                </div>
              </div>
              <!-- listed members -->
            </div>
          </div>
        </div>
        <!-- info_left_content -->

        <!-- info_right_content -->
        <%= render 'shared/content_service_times' %>
        <!-- info_right_content -->
      </div>

    </div>
  </div>
</div>

