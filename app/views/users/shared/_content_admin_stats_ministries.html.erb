<div class="content_admin_sitelinks">
  <div class="tree_line">
    <span><i class="fa fa-user"></i></span>
    <span><%= link_to "#{current_user.firstname}", user_path(current_user) %></span>
    <span><i class="fa fa-angle-right"></i></span>
    <span><%= link_to "admin panel", dashboard_user_path %></span>
    <span><i class="fa fa-angle-right"></i></span>
    <span class="current_page">ministries</span>
    <span class="tree_tab_link"><%= link_to "view ministry page", listed_ministries_launchministries_path, target:"_blank", style: 'color:#FFFFFF !important;' %></span>
    <span class="tree_tab_link"><%= link_to "create a ministry", new_launchministry_path, target:"_blank", style: 'color:#FFFFFF !important;' %></span>
  </div>
  <div class="medium-12 columns admin_tab_content">

    <!-- upper_section -->
    <div class="medium-12 columns page_cover upper_section">
      <div class="medium-12 columns data_main_cover">


        <div class="medium-3 columns data_stats_cover">
          <div class="data_stats">
            <div class="data_title">total ministries</div>
            <div class="stats_content">
              <span class="icon_cover">
                <div class="icon_inner_cover"><i class="fa fa-male"></i></div>
              </span>
              <span class="main_stats"><%= @launchministries.approved_ministries.count %></span>
            </div>
          </div>
        </div>

        <div class="medium-3 columns data_stats_cover">
          <div class="data_stats">
            <div class="data_title">total approved ministries</div>
            <div class="stats_content">
              <span class="icon_cover">
                <div class="icon_inner_cover"><i class="fa fa-male"></i></div>
              </span>
              <span class="main_stats"><%= @launchministries.pending_ministries.count %></span>
            </div>
          </div>
        </div>

        <div class="medium-3 columns data_stats_cover">
          <div class="data_stats">
            <div class="data_title">approved users ministries</div>
            <div class="stats_content">
              <span class="icon_cover">
                <div class="icon_inner_cover"><i class="fa fa-male"></i></div>
              </span>
              <span class="main_stats"><%= @users.females.count %></span>
            </div>
          </div>
        </div>

        <div class="medium-3 columns data_stats_cover">
          <div class="data_stats">
            <div class="data_title">approved admin ministries</div>
            <div class="stats_content">
              <span class="icon_cover">
                <div class="icon_inner_cover"><i class="fa fa-male"></i></div>
              </span>
              <span class="main_stats"><%= @users.admins.count %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="clear"></div>
    <!-- upper_section -->

    <!-- bottom_section -->
    <div class="medium-12 columns page_cover bottom_section">
      <div class="medium-12 columns page_content">
        <div class="header_section_cover">
          <div class="data_contents">
            <span class="data_header">
              <span>Total users on the platform</span> 
              <span>[<%= @users.all.count %>]</span>
            </span>
            <div class="header_subtitle">
              <i class="fa fa-info-circle"></i>
              <span>Total approved ministries on the platform</span>
            </div>
            <span class="btn btn_blue" id="ministstats_all_tab">all ministries <span>[<%# @users.all.count %>]</span></span>
            <span class="btn btn_green" id="ministstats_approved_tab">approved ministries [<%# @users.males.count %>]</span>
            <span class="btn btn_green" id="ministstats_pending_tab">pending ministries [<%# @users.females.count %>]</span>
            <span class="btn btn_green" id="ministstats_admin_tab">ministries by admin [<%# @users.admins.count %>]</span>
          </div>
        </div>
        <div class="divider"></div>
        <div class="clear"></div>

        <!-- listed_ministries -->
        <div class="listed_ministries">
          <!-- all ministries -->
          <div class="listed_ministries" id="ministstats_all_tab_content">
            <div class="data_list_title">all ministries</div>
            <ul>
              <% @launchministries.pending_ministries.each do |minsitry| %>
                <li class="medium-12 columns main_conatiner">
                  <div class="medium-1 columns main_image">
                    <div class="main_img_inner_cover">
                    <%= link_to image_tag("img_default_ministries.png"), minsitry, target:"_blank" %>
                    </div>
                  </div>
                  <div class="medium-9 columns main_info">
                    <div>
                      <span class="min_name"><%= link_to truncate(minsitry.mininstryidea, length: 30), minsitry, target:"_blank" %></span>
                      <span>|</span>
                      <span>
                        <span class="subheaders">ministry director:</span>
                        <span><%= link_to "#{minsitry.firstname} #{minsitry.lastname}", user_path(minsitry.user), target:"_blank", class: "weblink" %></span>
                      </span>
                      <span>|</span>
                      <span>
                        <span class="subheaders">email:</span>
                        <span class="weblink"><%= mail_to "#{minsitry.email}" %></span>
                      </span>
                      <span>|</span>
                      <span>
                        <% if minsitry.approved_ministry %>
                          <span class="approved"><%= link_to "approved", "#" %></span>
                        <% elsif minsitry.pending_ministry %>
                          <span class="pending"><%= link_to "pending", "#" %></span>
                        <% end %>
                      </span>
                    </div>
                    
                    <div class="min_content">
                      <span><%= truncate("#{minsitry.mininstrydescription}", length: 200) %></span>
                      <span><%= link_to "view", minsitry, target:"_blank" %></span>
                    </div>
                    <div>
                      <span class="subheaders">created:</span>
                      <span class="min_content"><%= minsitry.created_at.strftime("%b %d %Y") %></span>
                      <span>|</span>
                      <span class="subheaders">creator:</span>
                      <span class="min_content"><%= link_to "#{minsitry.user.firstname} #{minsitry.user.lastname}" %></span>
                    </div>
                  </div>
                  <div class="medium-2 columns main_action">
                    <div class="action_section">
                      <div class="delete_btn"><%= link_to 'delete', minsitry, method: :delete, data: { confirm: 'Are you sure?' } %></div>
                      <div class="edit_btn"><%= link_to 'edit', edit_user_launchministry_path(minsitry.user, minsitry), target:"_blank" %></div>
                      <div class="update_section">
                        <%= simple_form_for [minsitry.user, minsitry] do |f| %>
                          <%= f.input :approve, as: :boolean, checked_value: true, unchecked_value: false %>
                          <%= f.button :submit, "update" %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="clear"></div>
          <!-- all ministries -->

          <!-- approved ministries -->
          <div class="listed_ministries" id="ministstats_approved_tab_content">
            <div class="data_list_title">all approved ministries</div>
            <ul>
              <li>approved ministries</li>
            </ul>
          </div>
          <div class="clear"></div>
          <!-- approved ministries -->

          <!-- pending ministries -->
          <div class="listed_ministries" id="ministstats_pending_tab_content">
            <div class="data_list_title">all pending ministries</div>
            <ul>
              <li>pending ministries</li>
            </ul>
          </div>
          <div class="clear"></div>
          <!-- pending ministries -->

          <!-- pending ministries -->
          <div class="listed_ministries" id="ministstats_admin_tab_content">
            <div class="data_list_title">all admins ministries</div>
            <ul>
              <li>admins ministries</li>
            </ul>
          </div>
          <div class="clear"></div>
          <!-- pending ministries -->
        </div>
        <!-- listed_ministries -->

      </div>
    </div>
    <!-- bottom_section -->

  </div>
</div>