<div class="content_admin_sitelinks">
  <div class="tree_line">
    <span><i class="fa fa-user"></i></span>
    <span><%= link_to "#{current_user.firstname}", user_path(current_user) %></span>
    <span><i class="fa fa-angle-right"></i></span>
    <span><%= link_to "admin panel", dashboard_user_path(current_user) %></span>
    <span><i class="fa fa-angle-right"></i></span>
    <span class="current_page">OHC documents</span>
    <span class="tree_tab_link"><%= link_to "create documentation", new_documentation_path, target:"_blank", style: 'color:#FFFFFF !important;' %></span>
  </div>
  <div class="medium-12 columns admin_tab_content">

    <!-- upper_section -->
    <div class="medium-12 columns page_cover upper_section">
      <div class="medium-12 columns data_main_cover">
        <div class="medium-12 columns data_stats_cover">
          <div class="data_stats">
            <div class="data_title">total OHC documentation</div>
            <div class="stats_content">
              <span class="icon_cover">
                <div class="icon_inner_cover"><i class="fa fa-wpforms" aria-hidden="true"></i></div>
              </span>
              <span class="main_stats"><%= @documents.all.count %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="clear"></div>
    <!-- upper_section -->

    <!-- bottom_section -->
    <div class="medium-12 columns page_cover bottom_section">
      <div class="medium-12 columns page_content">
        <div class="header_section_cover">
          <div class="data_contents">
            <span class="data_header">
              <span>Total added OHC documents on the platform</span> 
              <span>[<%= @documents.all.count %>]</span>
            </span>
            <div class="header_subtitle">
              <i class="fa fa-info-circle"></i>
              <span>Total list of OHC documents on the platform</span>
            </div>
          </div>
        </div>
        <div class="divider"></div>
        <div class="clear"></div>

        <!-- listed_forms -->
        <div class="listed_forms">
          <!-- all forms -->
          <div class="listed_forms" id="">
            <div class="data_list_title">all documents</div>
            <ul>
              <% @documents.each do |document| %>
                <li class="medium-12 columns main_conatiner">
                  <div class="medium-9 columns main_info">
                    <div>
                      <span class="min_name"><%= link_to truncate(document.title, length: 60), document %></span>
                    </div>
                    <div>
                      <span class="subheaders">created:</span>
                      <span class="min_content"><%= document.created_at.strftime("%b %d %Y") %></span>
                    </div>
                    <div>
                      <span class="subheaders">created by:</span>
                      <span class="min_content"><%= "#{document.user.firstname} #{document.user.lastname}" %></span>
                    </div>
                  </div>
                  <div class="medium-2 columns main_action">
                    <div class="action_section">
                      <div class="edit_btn"><%= link_to 'edit', edit_user_documentation_path(document.user, document) %></div>
                      <div class="delete_btn"><%= link_to 'delete', document, method: :delete, data: { confirm: 'Are you sure?' } %></div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="clear"></div>
          <!-- all forms -->
        </div>
        <!-- listed_forms -->

      </div>
    </div>
    <!-- bottom_section -->

  </div>
</div>