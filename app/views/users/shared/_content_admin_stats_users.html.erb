<div class="content_admin_sitelinks">
  <div class="tree_line">
    <span><i class="fa fa-user"></i></span>
    <span><%= link_to "#{current_user.firstname}", user_path(current_user) %></span>
    <span><i class="fa fa-angle-right"></i></span>
    <span><%= link_to "admin panel", dashboard_user_path %></span>
    <span><i class="fa fa-angle-right"></i></span>
    <span class="current_page">users</span>
  </div>
  <div class="medium-12 columns admin_tab_content">

    <!-- upper_section -->
    <div class="medium-12 columns page_cover upper_section">
      <div class="medium-12 columns data_main_cover">
        <div class="medium-3 columns data_stats_cover">
          <div class="data_stats">
            <div class="data_title">all users</div>
            <div>
              <span><i class="fa fa-male"></i></span>
              <span><%= @users.all.count %></span>
            </div>
          </div>
        </div>
        <div class="medium-3 columns">
          <div class="data_stats">
            <div class="data_title">all users</div>
            <div>
              <span><i class="fa fa-male"></i></span>
              <span><%= @users.males.count %></span>
            </div>
          </div>
        </div>
        <div class="medium-3 columns">
          <div class="data_stats">
            <div class="data_title">all users</div>
            <div>
              <span><i class="fa fa-male"></i></span>
              <span><%= @users.females.count %></span>
            </div>
          </div>
        </div>
        <div class="medium-3 columns">
          <div class="data_stats">
            <div class="data_title">all users</div>
            <div>
              <span><i class="fa fa-male"></i></span>
              <span><%= @users.admins.count %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="clear"></div>
    <!-- upper_section -->

    <!-- bottom_section -->
    <div class="page_cover bottom_section">
      <div class="page_content">
        <div class="header_section_cover">
          <div class="data_contents">
            <span class="data_header">
              <span>Total users on the platform</span> 
              <span>[<%= @users.all.count %>]</span>
            </span>
            <span class="btn btn_blue">all users <span>[<%= @users.all.count %>]</span></span>
            <span class="btn btn_green">males [<%= @users.males.count %>]</span>
            <span class="btn btn_green">females [<%= @users.females.count %>]</span>
            <span class="btn btn_green">admins [<%= @users.admins.count %>]</span>
          </div>
          <div class="header_subtitle">
            <i class="fa fa-info-circle"></i>
            <span>total number of registered users on the platform</span>
          </div>
        </div>
      </div>
    </div>
    <!-- bottom_section -->

  </div>
</div>