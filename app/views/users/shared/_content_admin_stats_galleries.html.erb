                            <span data-tooltip tabindex="2" title="Event has been closed & the Event is active [has not expired]" class="top status_btn pending"><%= link_to "closed & active", event, target:"_blank" %></span>
                          <% elsif event.closed_event && event.expired_event %>
                            <!-- event closed & expired -->
                            <span data-tooltip tabindex="2" title="Event has been closed & the Event has expired"  class="status_btn pending"><%= link_to "closed & expired", event, target:"_blank" %></span>
                          <% end %>
                        <% end %>
                      </span>
                      <!-- event status -->

                    </div>
                    <div>
                      <span class="subheaders">event date:</span>
                      <span class="min_content"><%= "#{event.start_time.strftime("%b %d %Y")} [#{event.start_time.strftime("%I:%M%p")}]" %> - <%= "#{event.end_time.strftime("%b %d %Y")} [#{event.end_time.strftime("%I:%M%p")}]" %></span>
                    </div>
                    <div>
                      <span class="subheaders">address:</span>
                      <span class="min_content"><%= "#{event.address} | #{event.city} | #{event.postcode}" %></span>
                    </div>
                    <div class="min_content">
                      <span><%= truncate("#{event.description}", length: 200) %></span>
                      <span><%= link_to "view", event, target:"_blank" %></span>
                    </div>
                    <div>
                      <span class="subheaders">category:</span>
                      <span class="min_content">
                        <% if event.category_event.name == "Youth Event" %>
                          <%= link_to "Youth Events", youth_events_events_path, target:"blank" %>
                        <% elsif event.category_event.name == "Church Event" %>
                          <%= link_to "Church Events", church_events_events_path, target:"blank" %>
                        <% elsif event.category_event.name == "Community Event" %>
                          <%= link_to "Community Events", community_events_events_path, target:"blank" %>
                        <% elsif event.category_event.name == "National Event" %>
                          <%= link_to "National Event", national_events_events_path, target:"blank" %>
                        <% elsif event.category_event.name == "Leadership Forum Event" %>
                          <%= link_to "Leadership Forum", leadership_development_path, target:"blank" %>
                        <% elsif event.category_event.name == "Baptism Class Event" %>
                          <%= link_to "Baptism", baptism_path, target:"blank" %>
                        <% elsif event.category_event.name == "Bible Study Event" %>
                          <%= link_to "Bible Study", bible_and_you_path, target:"blank" %>
                        <% end %>
                      </span>
                      <span>|</span>
                      <span class="subheaders">created:</span>
                      <span class="min_content"><%= event.created_at.strftime("%b %d %Y") %></span>
                      <span>|</span>
                      <span class="subheaders">creator:</span>
                      <span class="min_content"><%= link_to "#{event.user.firstname} #{event.user.lastname}", user_path(event.user), target:"_blank" %></span>
                      <% if event.user.admin? %>
                        <span class="min_content">[admin]</span>
                      <% end %>
                    </div>
                  </div>
                  <div class="medium-2 columns main_action">
                    <div class="action_section">
                      <div class="update_section">
                        <% unless event.approved_event %>
                          <%= simple_form_for [event.user, event] do |f| %>
                            <%= f.input :approve, as: :boolean, checked_value: true, unchecked_value: false %>
                            <%= f.button :submit, "update" %>
                          <% end %>
                        <% end %>
                      </div>
                      <div class="edit_btn"><%= link_to 'edit', edit_user_event_path(event.user, event), target:"_blank" %></div>
                      <div class="delete_btn"><%= link_to 'delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="clear"></div>
          <!-- all events -->

        </div>
        <!-- listed_events -->

      </div>
    </div>
    <!-- bottom_section -->

  </div>
</div>