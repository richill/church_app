<h1>must update</h1>
<div class="content_admin_sitelinks">
  <div class="tree_line">
    <span><i class="fa fa-user"></i></span>
    <span><%= link_to "#{current_user.firstname}", user_path(current_user) %></span>
    <span><i class="fa fa-angle-right"></i></span>
    <span><%= link_to "admin panel", content_management_user_path(current_user) %></span>
    <span><i class="fa fa-angle-right"></i></span>
    <span class="current_page">stats businesses</span>
    <span class="tree_tab_link"><%= link_to "view small groups", "#", target:"_blank", style: 'color:#FFFFFF !important;' %></span>
    <span class="tree_tab_link"><%= link_to "create small groups", "#", target:"_blank", style: 'color:#FFFFFF !important;' %></span>
  </div>
  <div class="medium-12 columns admin_tab_content">

    <!-- upper_section -->
    <div class="medium-12 columns page_cover upper_section">
      <div class="medium-12 columns data_main_cover">
        <div class="medium-12 columns data_stats_cover">
          <div class="data_stats">
            <div class="data_title">total business</div>
            <div class="stats_content">
              <span class="icon_cover">
                <div class="icon_inner_cover"><i class="fa fa-users" aria-hidden="true"></i></div>
              </span>
              <span class="main_stats"><%= @smallgroups.all.count %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="clear"></div>
    <!-- upper_section -->

    <!-- bottom_section -->
    <div class="medium-12 columns page_cover bottom_section">
      <div class="medium-12 columns page_content">
        <div class="header_section_cover">
          <div class="data_contents">
            <span class="data_header">
              <span>Total posted businesses on the platform</span> 
              <span>[<%= @smallgroups.all.count %>]</span>
            </span>
            <div class="header_subtitle">
              <i class="fa fa-info-circle"></i>
              <span>Total list of businesses on the platform</span>
            </div>
          </div>
        </div>
        <div class="divider"></div>
        <div class="clear"></div>

        <!-- listed_discussions -->
        <div class="listed_discussions">
          <!-- all discussions -->
          <div class="listed_discussions" id="">
            <div class="data_list_title">all businesses</div>
            <ul>
              <% @smallgroups.each do |group| %>
                <li class="medium-12 columns main_conatiner">
                  <div class="medium-1 columns main_image">
                    <div class="main_img_inner_cover">
                      <% if group.image.present? %>
                        <%= link_to(cl_image_tag("#{group.image}", :transformation=>[{:gravity=>"face", :width => 600, :height => 320, :crop=>"fill"}]), group) %>
                      <% else %>
                        <%= link_to image_tag("img_default_forum.png"), group, target:"_blank" %>
                      <% end %>
                    </div>
                  </div>
                  <div class="medium-9 columns main_info">
                    <div>
                      <span class="min_name"><%= link_to truncate(group.name, length: 60), group, target:"_blank" %></span>
                    </div>
                    
                    <div class="min_content">
                      <span><%= truncate("#{group.descriptin}", length: 200) %></span>
                      <span><%= link_to "view", group, target:"_blank" %></span>
                    </div>
                    <div>
                      <span class="subheaders">created:</span>
                      <span class="min_content"><%= group.created_at.strftime("%b %d %Y") %></span>
                      <% if group.attendances.count > 0 %>
                        <span>|</span>
                        <span class="subheaders"><i class="fa fa-users" aria-hidden="true"></i>:</span>
                        <span class="min_content"><%= link_to "#{group.attendances.count} members", group, target:"_blank" %></span>
                      <% end %>
                    </div>
                  </div>
                  <div class="medium-2 columns main_action">
                    <div class="action_section">
                      <div class="edit_btn"><%= link_to 'edit', edit_smallgroup_path(group) %></div>
                      <div class="delete_btn"><%= link_to 'delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="clear"></div>
          <!-- all discussions -->
        </div>
        <!-- listed_discussions -->

      </div>
    </div>
    <!-- bottom_section -->

  </div>
</div>