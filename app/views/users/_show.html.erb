<div class="pages_boarder"></div>
<div class="medium-12 columns usershow_section">
  <div class="usershow_inner_section">
    <div class="medium-12 columns usershow_content">
      <div class="tree_line">
        <span><%= link_to "home", root_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span class="current_page">profile</span>
        <span class="link_btn">
          <% if current_user == @user || current_user.admin? %>
            <%= link_to "edit profile", edit_user_path(@user) %>
          <% end %>
        </span>
      </div>

      <div class="medium-12 columns page_main_content">
        <!-- info_left_content -->
        <div class="medium-8 columns info_left_content">
          <div class="page_information">
            <!-- top_section -->
            <div class="user_top_section">
              <div class="username_header">
                <div class="user_name"><%= "#{@user.firstname} #{@user.lastname}" %></div>
                <div class="member_date">(member since: <%= @user.created_at.strftime("%b %d, %Y") %>)</div>
              </div>
            </div>
            <!-- top_section -->

            <div class="medium-12 columns user_deatils">
              <!-- left_section -->
              <div class="medium-4 columns user_left_section">
                <div class="user_img_cover"><%= image_tag("img-profile-image-default.png") %></div>
              </div>
              <!-- left_section -->

              <!-- right_section -->
              <div class="medium-8 columns user_right_section">
                <div class="user_details">
                  <ul>
                    <li><i class="fa fa-envelope"></i><span class="useremail"><%= mail_to "#{@user.email}" %></span></li>
                    <li>
                      <i class="fa fa-briefcase"></i>
                      <% if @user.job.present? %>
                        <span class="userwork"><%= "#{@user.job}" %></span>
                      <% else %>
                        <span class="uncomplete_info"><%= link_to "currently not completed profile", edit_user_path(@user) %></span>
                      <% end %>
                    </li>
                    <li>
                      <div class="complete_stats">
                        <div class="listed_stats">
                          <div class="user_link_info" data-open="modal_user_postedjobs"><span class="count"><%= @user.jobs.count %></span><span class="colonicon">:</span><span class="count_info">posted jobs</span></div>
                          <div><%= render 'shared/modal_user_posted_jobs' %></div>
                        </div>

                        <div class="listed_stats">
                          <div class="user_link_info" data-open="modal_user_postedcomments_disc"><span class="count"><%= @user_discussion_comments.count %></span><span class="colonicon">:</span><span class="count_info">comments made in discussions</span></div>
                          <div><%= render 'shared/modal_user_discussion_comments' %></div>
                        </div>

                        <div class="listed_stats">
                          <div class="user_link_info" data-open="modal_user_posted_practicalneeds"><span class="count"><%= @user.practicalneeds.count %></span><span class="colonicon">:</span><span class="count_info">posted practical needs</span></div>
                          <div><%= render 'shared/modal_user_posted_practicalneeds' %></div>
                        </div>

                        <div class="listed_stats">
                          <div class="user_link_info" data-open="modal_user_practicalneed_comments"><span class="count"><%= @user_practicalneed_comments.count %></span><span class="colonicon">:</span><span class="count_info">suggested solutions provided to members</span></div>
                          <div><%= render 'shared/modal_user_practicalneed_comments' %></div>
                        </div>

                        <div class="listed_stats">
                          <div class="user_link_info" data-open="modal_user_practicalneed_comments"><span class="count"><%= @user.attending_groups.count %></span><span class="colonicon">:</span><span class="count_info">groups you have joined</span></div>
                          <div><%= render 'shared/modal_user_practicalneed_comments' %></div>
                        </div>

                      </div>
                    </li>
                  </ul>
                </div>
              </div>
              <!-- right_section -->
            </div>
          </div>


        </div>
        <!-- info_left_content -->

        <!-- info_right_content -->
        <%= render 'shared/content_user_options' %>
        <%= render 'shared/content_service_times' %>
        <!-- info_right_content -->
      </div>

    </div>
  </div>
</div>
