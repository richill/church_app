<div class="pages_boarder"></div>
<div class="medium-12 columns content_formsindex_section">
  <div class="content_formsindex_inner_section">
    <div class="medium-12 columns formsindex_content">
      <div class="tree_line">
        <span><%= link_to "home", root_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span><%= link_to "resources", resources_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span><%= link_to "useful services", useful_services_path %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span class="current_page">useful forms</span>
      </div>

      <div class="medium-12 columns page_main_content">
        <!-- info_left_content -->
        <div class="medium-8 columns info_left_content">
          <div class="page_information">
            <div class="page_header">list of useful forms</div>
            
            <% if @forms.present? %>
              <div class="form_content">
                <ul class="page_inner_section">
                  <% @forms.each do |form| %>
                    <li class="listed_form">
                      <%= link_to "#{form.fileattachment}", target:"_blank" do %>
                      <div><i class="fa fa-wpforms" aria-hidden="true"></i></div>
                      <div class="form_title"><%= truncate("#{form.title}", length: 45) %></div>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% else %>
              <div><%= render "shared/no_listed_content" %></div>
            <% end %>
          </div>
        </div>
        <!-- info_left_content -->

        <!-- info_right_content -->
        <%= render 'shared/content_service_times' %>
        <!-- info_right_content -->
      </div>

    </div>
  </div>
</div>


