<div class="pages_boarder"></div>
<div class="medium-12 columns discussionform_section forms_section">
  <div class="discussionform_inner_section forms_inner_section">
    <div class="medium-12 columns discussionform_content forms_content">
      <div class="tree_line">
        <span><i class="fa fa-user"></i></span>
        <span><%= link_to "#{current_user.firstname}", user_path(current_user) %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span><%= link_to "admin panel", dashboard_user_path(current_user) %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span><%= link_to "stats forum/discussions", stats_forum_user_path(current_user) %></span>
        <span><i class="fa fa-angle-right"></i></span>
        <span class="current_page">
          <% if action_name == 'new'  %>
            <span>add form</span>
          <% else %>
            <span>update form</span>
          <% end %>
        </span>
      </div>

      <div class="medium-12 columns page_main_content">
        <!-- info_left_content -->
        <div class="medium-8 columns info_left_content">
          <div class="page_information">
            <div class="page_header">
              <% if action_name == 'new' %>
                <span>add form</span>
              <% else %>
                <span>update form </span>
              <% end %>
            </div>
            <div class="paragraph_content">
              <span>Add a form to the platform.</span>
            </div>

            <div class="event_main_form">
              <%= simple_form_for(@form) do |f| %>
                <%= f.error_notification %>

                <div class="form-inputs">
                  <div class="update_section">
                    <div class="imgae_title">form file</div>
                    <%= f.file_field :fileattachment %>
                    <div class="minor_info">
                      <span>Upload form or file inorder to display to the audience</span> 
                    </div>
                  </div>
                  <div class="clear"></div>

                  <div class="info_sub_content"><%= f.input :title, label: "Form Title", placeholder: "Dance In The Park Dance In The Park" %></div>
                  <div class="clear"></div>

                  <!-- hidden_field -->
                  <%= f.hidden_field :user_id %>
                  <!-- hidden_field -->
                </div>

                <div class="form_btns">
                  <% if user_signed_in? %>
                    <% if current_user.admin? %>
                      <ul>
                        <li class="cancel_btn">
                          <div><%= link_to "back", stats_forms_user_path(current_user) %></div>
                        </li>
                        <li>
                          <% if action_name == 'new'  %>
                            <div class="form-actions submit_btn">
                              <%= f.button :submit, "add form" %>
                            </div>
                          <% else %>
                            <div class="form-actions submit_btn">
                              <%= f.button :submit, "update form" %>
                            </div>
                          <% end %>
                        </li>
                      </ul>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <!-- info_left_content -->

        <!-- info_right_content -->
        <%= render 'shared/content_service_times' %>
        <!-- info_right_content -->
      </div>

    </div>
  </div>
</div>













